@model WDT_Assignment2.ViewModels.BillPayViewModel;
@{
    ViewData["Title"] = "Customer";
    ViewData["Title"] = "AccountNumber";
}

<h1>BillPay</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <select asp-for="AccountNumber" class="form-control" asp-items="ViewBag.AccountNumber"></select>
            </div>
            <div class="form-group">
                <label asp-for="PayeeID" class="control-label"></label>
                <input asp-for="PayeeID" class="form-control"  />
                <span asp-validation-for="PayeeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillPay.Amount" class="control-label"></label>
                <input asp-for="BillPay.Amount" class="form-control" />
                <span asp-validation-for="BillPay.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillPay.ScheduleDate" class="control-label"></label>
                <input asp-for="BillPay.ScheduleDate" class="form-control" />
                <span asp-validation-for="BillPay.ScheduleDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillPay.Period" class="control-label"></label>
                <select asp-for="BillPay.Period" class="form-control" asp-items="Model.Periods" ></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm new payment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllScheduledPayments">View all scheduled payments</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


