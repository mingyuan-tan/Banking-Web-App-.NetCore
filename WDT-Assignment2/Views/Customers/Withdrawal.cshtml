@model Account
@{
    ViewData["Title"] = "Deposit";
}

<h1 class="display-4">Account Number @Model.AccountNumber (@Model.AccountType)</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Withdrawal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Amount" class="control-label">Withdrawal Amount:</label>
                <input id="Amount" name="Amount" class="form-control" value="@ViewBag.Amount?.ToString("0.00")"
                       data-val="true" data-val-number="The field Amount must be a number."
                       data-val-required="The Amount field is required." />
                @Html.ValidationMessage("Amount", new { @class = "text-danger" })
                <p style="font-size: 10px;">NOTE: If you have performed 4 transactions from this account, withdrawal will now include a charge of $0.10.</p>
            </div>
            <div class="form-group">
                <label for="Comment" class="control-label">Comment:</label>
                <input id="Comment" name="Comment" placeholder="Optional" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Withdraw" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Accounts</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
