@model Login
@{
    ViewData["Title"] = "Logins";
}


<div class="row padding">
    <div class="col-md-4">
        <form asp-action="Login">
            <h1 class="display-4">
                <i class="page-icon fas fa-sign-in-alt"></i>
                Login
            </h1>

            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <input asp-for="UserID" class="form-control" />
                <span asp-validation-for="UserID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Password" class="control-label">Password</label>
                <input id="Password" name="Password" type="password" class="form-control"
                       data-val="true" data-val-required="The Password field is required." />
                @Html.ValidationMessage("Password", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="hidden" name="Attempts" value=@ViewBag.Attempts />
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            @Html.ValidationMessage("LoginFailed", new { @class = "text-danger" })
        </form>
    </div>

    <figure class="login-background col-md-8">
        <div class="fixed-wrap">
            <div id="loginfixed">

            </div>
        </div>
    </figure>

</div>




@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
